<div class="container">
    <h1>Articles</h1>
<%= button_to(
        "Log Out",
        destroy_user_session_path,
        method: :delete
      ) %>

    <%= link_to new_articale_path, class: "new-article-link" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="#ffffff" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <line x1="12" y1="5" x2="12" y2="19" />
        <line x1="5" y1="12" x2="19" y2="12" />
    </svg>
    <% end %>
    <%= link_to archived_articales_path, class: "archive-link" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-archive" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="#ff6a00" fill="white" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <rect x="3" y="4" width="18" height="4" rx="2" />
        <path d="M5 8v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1 -1v-12" />
        <line x1="10" y1="12" x2="14" y2="12" />
    </svg>
    <% end %>



    <% @articales.each do |articale| %>
        <% if articale.published %>
            <div class= "article-card">
                <h2><%= link_to articale.title, articale_path(articale) %></h2>
                <p><%= truncate(articale.body, length: 100) %></p>
                <% if articale.image.present? %>
                <img src="<%= articale.image.url %>" class="article-image" />            
                <% end %>
            </div>
        <% end %>
    <% end %>


</div>
